---
import "../styles/global.css";
import "@fontsource-variable/inter";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth snap-y snap-mandatory">
<head>
	<title>Mick's Portfolio</title>
	<meta charset="UTF-8"/>
	<meta name="viewport" content="width=device-width"/>
	<link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
	<meta name="generator" content={Astro.generator}/>
</head>
<body class="text-white bg-black font-inter relative">
	<Header/>
	<slot/>
	<Footer/>
	<canvas class="-z-10 absolute inset-0" id="animation-canvas"></canvas>
</body>
</html>

<script>
	import { ThpaceGL } from "thpace";

	const canvas = document.querySelector<HTMLCanvasElement>("#animation-canvas")!;

	ThpaceGL.create(canvas, {
		colors: ["#000000", "#222222", "#000000"],
		triangleSize: 150,
		maxFps: 60,
		particleSettings: {
			count: [0, 0],
		},
	});
</script>