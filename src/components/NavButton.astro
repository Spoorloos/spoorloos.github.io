---
import { twMerge } from "tailwind-merge";

type Props = astroHTML.JSX.AnchorHTMLAttributes;

const { class: className, ...props } = Astro.props;
---

<a
    class={twMerge(className, "p-2 relative after:absolute after:inset-[auto_0_0_0] after:h-0.5 after:bg-white after:scale-x-0 after:transition-all hover:after:scale-x-100 after:opacity-0 hover:after:opacity-100 text-white/75 hover:text-white hover:text-shadow-[0px_0px_10px_white] transition-all")}
    {...props}
>
    <slot/>
</a>