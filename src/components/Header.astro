---
import Binary from "@lucide/astro/icons/binary";
import Menu from "@lucide/astro/icons/menu";

const ANIMATE_STEP = 0.1; // seconds

const NAV_LINKS = {
    "Home": "/#",
    "About Me": "/#about-me",
    "Skills": "/#skills",
    "Projects": "/#projects",
    "Contact": "/#contact",
} satisfies Record<string, string>;
---

<header class="fixed top-0 z-10 flex justify-between w-full gap-8 p-4 has-[nav[open]]:bg-black transition-colors duration-500 ease-in-out">
    <a class="flex items-center gap-1 animate-slide-down" href="/">
        <Binary class="size-8"/>
        <h1 class="text-3xl sm:text-2xl font-bold">Mick's Portfolio</h1>
    </a>
    <nav class="sm:flex gap-2 absolute sm:static top-full left-0 right-0 group" id="nav-menu">
        {Object.entries(NAV_LINKS).map(([ name, href ], index) =>
            <a
                href={href}
                class="nav-link"
                style={{
                    animationDelay: `${index * ANIMATE_STEP}s`,
                    transitionDelay: `${index * ANIMATE_STEP}s`,
                }}
            >{name}</a>
        )}
    </nav>
    <button class="sm:hidden cursor-pointer" id="nav-btn">
        <Menu class="size-8"/>
    </button>
</header>

<script>
    const navBtn = document.getElementById("nav-btn")!;
    const navMenu = document.getElementById("nav-menu")!;

    navBtn.addEventListener("click", () => {
        navMenu.toggleAttribute("open");
    });
</script>